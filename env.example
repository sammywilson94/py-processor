# ============================================
# Flask Application Configuration
# ============================================
HOST=0.0.0.0
PORT=5001
DEBUG=False

# Upload Configuration
UPLOAD_FOLDER=/tmp

# ============================================
# WebSocket Configuration
# ============================================
WEBSOCKET_CORS_ORIGINS=*
WEBSOCKET_ASYNC_MODE=eventlet

# ============================================
# Agent Configuration
# ============================================
AGENT_MAX_RETRIES=2
AGENT_TIMEOUT=3600
AGENT_APPROVAL_REQUIRED=true
AGENT_AUTO_APPLY_LOW_RISK=false

# ============================================
# LLM Configuration (REQUIRED for agent features)
# ============================================
OPENAI_API_KEY=open-ai-key
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# ============================================
# Git Configuration
# ============================================
GIT_USER_NAME=git-hub-username
GIT_USER_EMAIL=git-hub-email
GITHUB_TOKEN=token
GITHUB_API_URL=https://api.github.com

# ============================================
# Test Runner Configuration
# ============================================
TEST_RUNNER_TIMEOUT=300
USE_DOCKER_FOR_TESTS=false
DOCKER_IMAGE_PREFIX=test-runner

# ============================================
# Security Configuration
# ============================================
MAX_IMPACTED_FILES_FOR_AUTO_APPROVAL=5
REQUIRE_HUMAN_APPROVAL_FOR_MIGRATIONS=true

# ============================================
# PKG Configuration
# ============================================
PKG_CACHE_ENABLED=true
PKG_CACHE_PATH=pkg.json

# ============================================
# Neo4j Configuration
# ============================================
NEO4J_URI=neo4j://127.0.0.1:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=db-password
NEO4J_DATABASE=neo4j
NEO4J_MAX_RETRIES=3
NEO4J_RETRY_DELAY=1
NEO4J_BATCH_SIZE=1000